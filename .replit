modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Train PINN"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Train PINN Ideal"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Visualize Results"

[[workflows.workflow]]
name = "Streamlit App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m streamlit run main.py --server.port=8501 --server.address=0.0.0.0"
waitForPort = 8501

[[workflows.workflow]]
name = "Train PINN"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 train_solar_pinn.py"

[[workflows.workflow]]
name = "Train PINN Ideal"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 train_solar_pinn_ideal.py"

[[workflows.workflow]]
name = "Visualize Results"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 visualize_results.py"

[deployment]
run = ["sh", "-c", "python -m streamlit run main.py --server.port=8501 --server.address=0.0.0.0"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8501
externalPort = 3000
